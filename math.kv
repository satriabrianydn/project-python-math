ScreenManager:
    LoadingScreen:
    MainScreen:
    MenuScreen:
    GameScreen:
    ResultScreen:

<LoadingScreen>:
    name: 'loading'
    FloatLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Video:
            source: 'assets/videos/loading.mp4'  # Ganti dengan path video Anda
            state: 'play'
            options: {'eos': 'loop'}  # Loop video saat selesai
            allow_stretch: True
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<MainScreen>:
    name: 'main'
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            source: 'images/background_main.jpg'
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 40

        MDLabel:
            id: welcome_label
            text: ''
            halign: 'center'
            font_style: 'H4'
            font_name: 'fonts/kid-games.ttf'
            theme_text_color: 'Custom'
            text_color: 1, 1, 1, 1

        ImageButton:
            id: mulai_button
            source: 'assets/button_play.png'
            size_hint: (None, None)
            size: 250, 100
            pos_hint: {'center_x': 0.5}
            on_release: app.sm.current = 'menu'

<MenuScreen>:
    name: 'menu'
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            source: 'images/background_level.jpg'
            pos: self.pos
            size: self.size

    FloatLayout:
        MDLabel:
            text: ''
            halign: 'center'
            font_style: 'H4'
            font_name: 'fonts/kid-games.ttf'
            color: 1, 1, 1, 1
            size_hint: (None, None)
            size: self.texture_size
            text_size: self.width, None  # Memastikan teks ditampilkan secara horizontal
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}  # Posisi teks lebih tinggi agar ada jarak

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (None, None)
            size: 800, 200
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            spacing: 20

            ImageButton:
                source: 'assets/button_kelas1.png'
                size_hint: (None, None)
                size: 250, 100
                on_release: app.start_game(1)

            ImageButton:
                source: 'assets/button_kelas2.png'
                size_hint: (None, None)
                size: 250, 100
                on_release: app.start_game(2)

            ImageButton:
                source: 'assets/button_kelas3.png'
                size_hint: (None, None)
                size: 250, 100
                on_release: app.start_game(3)


<GameScreen>:
    name: 'game'
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]  # Background color
        Rectangle:
            source: 'images/background.jpg'  # Background image
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        MDLabel:
            id: question
            text: ''
            halign: 'center'
            font_style: 'H4'
            font_name: 'fonts/kid-games.ttf'
            color: 1, 1, 1, 1  # Question text color

        # BoxLayout to center images
        BoxLayout:
            id: images_box
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(100)  # Adjust height as needed
            spacing: 10
            halign: 'center'
            pos_hint: {'center_x': 0.5}

            # Dynamically filled with images in your Python code

        MDTextField:
            id: answer
            hint_text: 'Masukkan jawaban'
            mode: 'rectangle'  # Input shape
            halign: 'center'
            input_filter: 'int'  # Accepts only integer input
            multiline: False  # Prevent multiple lines of input
            size_hint: (0.8, None)
            height: "40dp"
            pos_hint: {'center_x': 0.5}

        ImageButton:
            source: 'assets/button_submit.png'
            size_hint: (None, None)
            size: 250, 100
            pos_hint: {'center_x': 0.5}
            on_release: app.check_answer()  # Call function to check answer

        ImageButton:
            source: 'assets/button_kembali.png'
            size_hint: (None, None)
            size: 250, 100
            pos_hint: {'center_x': 0.5}
            on_release: app.sm.current = 'menu'

        MDLabel:
            id: feedback
            text: ''
            halign: 'center'
            font_style: 'Subtitle1'
            theme_text_color: 'Secondary'


<ResultScreen>:
    name: 'result'
    canvas.before:
        Color:
            rgba: [1, 1, 1, 1]
        Rectangle:
            source: 'images/background.jpg'
            pos: self.pos
            size: self.size

    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        MDLabel:
            id: result_label
            text: ''
            halign: 'center'
            font_style: 'H4'
            font_name: 'fonts/kid-games.ttf'
            color: 1, 1, 1, 1

        ImageButton:
            id: congrats_image
            source: 'images/star.png'
            size_hint: (None, None)
            size: 250, 250
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            opacity: 0
            disabled: True

        ImageButton:
            id: kembali_button
            source: 'assets/button_restart.png'
            size_hint: (None, None)
            size: 250, 100
            pos_hint: {'center_x': 0.5}
            on_release: app.restart_game()